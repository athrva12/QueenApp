<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerFragment.CustomerMainActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Customer.QueenActivity">
        <RelativeLayout
            android:id="@+id/layout_beforesearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageview_searchbutton"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:src="@drawable/add"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Search" android:textColor="#000"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imageview_searchbutton"

                />
        </RelativeLayout>
        <!--layout after search -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layout_afterserch">
            <RelativeLayout
                android:id="@+id/layout"
                android:layout_below="@+id/imageview_appoinment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1a1a00">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Request from Salon"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:padding="5dp"
                    />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/layout">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_profile_pic_salon"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_margin="20dp"
                    android:src="@color/colorPrimaryDark"
                    app:civ_border_color="#000"
                    app:civ_border_width="1dp"
                    android:layout_below="@+id/layout"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salon Test 1 "
                        android:textSize="28sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_marginTop="20dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <LinearLayout
                            android:id="@+id/layout5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_margin="20dp"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/star"/>
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/star"/> <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/star"/> <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/star"/> <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/star"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_margin="20dp"
                            android:orientation="horizontal"
                            >
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/star"/>
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/star_gray"/> <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/star_gray"/> <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/star"/> <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/star_gray"/>

                        </LinearLayout>

                    </RelativeLayout>
                    <TextView
                        android:id="@+id/no_of_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 reviews"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"/>
                    <LinearLayout
                        android:id="@+id/linearlayout3"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@+id/textview_service_time"


                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/buton_accept"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/accept"
                            android:paddingRight="20dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            />

                        <ImageView
                            android:id="@+id/buton_reject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/reject"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <View
                android:id="@id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/layout2"
                android:background="#000"></View>
        </RelativeLayout>
        <!--Rest of view of screen-->
        <LinearLayout
            android:layout_below="@id/layout_beforesearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearlayout2"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1a1a00">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Upcoming Appointment"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:padding="5dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1a1a00"
                android:text="No new appoinments"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:padding="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1a1a00"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Pending Confirmation"
                    android:layout_marginLeft="5dp"
                    android:textSize="20sp"
                    android:padding="5dp"
                    android:id="@+id/text"
                    />


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1a1a00"
                android:text="No pending appoinments"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:padding="5dp"
                />

            <View
                android:id="@id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/layout2"
                android:background="#000">

            </View>


        </LinearLayout>


    </RelativeLayout>

</FrameLayout>