<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f5f5f0"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true">
    <TextView
        android:id="@+id/textview_custom_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_margin="@dimen/common_20_dp"
        android:gravity="center_horizontal"
        android:text="Edit VAT Number"/>
    <TextView
        android:id="@+id/please_enter_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginLeft="@dimen/common_20_dp"
        android:text="Please enter VAT number"
        />
        <EditText
            android:id="@+id/dialog_edittext"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:hint="Enter number"
            android:paddingLeft="4dp"
            android:layout_margin="@dimen/common_20_dp"
            android:inputType="number"
            android:background="@drawable/edittext_curved"
            />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_2_dp"
        android:background="#e0ebeb"
        >

    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/common_5_dp"

            android:layout_centerHorizontal="true"
            android:paddingBottom="6dp">
       <TextView
           android:id="@+id/cancel"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Cancel"
           android:textSize="22sp"
           android:layout_marginRight="@dimen/common_20_dp"
           android:layout_centerHorizontal="true"
           android:textColor="#ff00"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"

            android:layout_marginLeft="@dimen/common_30_dp"
            android:textSize="22sp"
            android:textColor="#1a8cff"/>
        </LinearLayout>
    </RelativeLayout>
    </LinearLayout>
</RelativeLayout>