<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Salon.ProfileActivity">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <RelativeLayout

             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <de.hdodenhof.circleimageview.CircleImageView
                 android:id="@+id/user_profile_pic_salon"
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:layout_gravity="center"
                 android:layout_marginTop="8dp"
                 android:src="@color/colorPrimaryDark"
                 app:civ_border_color="#000"
                 app:civ_border_width="1dp"
                 android:layout_marginLeft="15dp"
                 />
             <TextView
                 android:id="@+id/textview_salon_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Salon Test 1"
             android:textSize="20sp"
             android:textColor="#000"
             android:layout_toEndOf="@+id/user_profile_pic_salon"
             android:layout_toRightOf="@+id/user_profile_pic_salon"
             android:layout_marginTop="10dp"
             android:paddingLeft="15dp"/>
             <TextView
                 android:id="@+id/textview_salon_owner"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Bhakti Karva"
                 android:textSize="20sp"
                 android:textColor="#000"
                 android:layout_toEndOf="@+id/user_profile_pic_salon"
                 android:layout_toRightOf="@+id/user_profile_pic_salon"
                 android:layout_marginTop="10dp"
                 android:layout_below="@+id/textview_salon_name"
                 android:paddingLeft="15dp"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="9479317092"
                 android:textSize="20sp"
                 android:textColor="#000"
                 android:layout_toEndOf="@+id/user_profile_pic_salon"
                 android:layout_toRightOf="@+id/user_profile_pic_salon"
                 android:layout_marginTop="10dp"
                 android:paddingLeft="15dp"
                 android:layout_below="@+id/textview_salon_owner"/>


         </RelativeLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#1a1a00">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#fff"
                 android:text="Address"
                 android:layout_marginLeft="5dp"
                 android:textSize="20sp"
                 android:padding="5dp"
                 />


             <TextView
                 android:id="@+id/address_edit_text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Edit"
                 android:textColor="#fff"
                 android:textSize="20sp"
                 android:padding="5dp"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="15dp"/>
         </RelativeLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/textview_salon_address"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="15sp"
                 android:text="address"
                 android:textColor="#000"
                 android:layout_margin="15dp"/>
             <ImageView
                 android:id="@+id/imageview_location"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/pin"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="10dp"/>

         </RelativeLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#1a1a00">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#fff"
                 android:text="Pictures"
                 android:layout_marginLeft="5dp"
                 android:textSize="20sp"
                 android:padding="5dp"
                 />

             <TextView
                 android:id="@+id/pictures_edit_text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Edit"
                 android:textColor="#fff"
                 android:textSize="20sp"
                 android:padding="5dp"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="15dp"/>
         </RelativeLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <ImageView
                 android:layout_width="70dp"
                 android:layout_height="90dp"
                 android:src="@color/colorPrimaryDark"
                 android:layout_marginTop="20dp"
                 android:layout_marginLeft="10dp"

                 />

             <ImageView
                 android:layout_width="70dp"
                 android:layout_height="90dp"
                 android:src="@color/colorPrimaryDark"
                 android:layout_marginTop="20dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginBottom="15dp"
                 />

             <ImageView
                 android:layout_width="70dp"
                 android:layout_height="90dp"
                 android:src="@color/colorPrimaryDark"
                 android:layout_marginTop="20dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginBottom="15dp"
                 />

             <ImageView
                 android:layout_width="70dp"
                 android:layout_height="90dp"
                 android:src="@color/colorPrimaryDark"
                 android:layout_marginTop="20dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginBottom="15dp"
                 />

             <ImageView
                 android:layout_width="70dp"
                 android:layout_height="90dp"
                 android:src="@color/colorPrimaryDark"
                 android:layout_marginTop="20dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginBottom="15dp"
                 />
         </LinearLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#1a1a00">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#fff"
                 android:text="Working Hours"
                 android:layout_marginLeft="5dp"
                 android:textSize="20sp"
                 android:padding="5dp"
                 />


             <TextView
                 android:id="@+id/workinghours_edit_text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Edit"
                 android:textColor="#fff"
                 android:textSize="20sp"
                 android:padding="5dp"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="15dp"/>
         </RelativeLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/days"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Days : "
                 android:textColor="#000"
                 android:textSize="18sp"
                 android:layout_margin="15dp"
                 />
             <TextView
                 android:id="@+id/textview_workin_days"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="days"
                 android:textSize="18sp"
                 android:textColor="#000"
                 android:layout_toRightOf="@+id/days"
                 android:layout_marginTop="15dp"/>
             <TextView
                 android:id="@+id/timing"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Timing : "
                 android:textColor="#000"
                 android:textSize="18sp"
                 android:layout_below="@+id/days"
                 android:layout_marginLeft="15dp"/>
             <TextView
                 android:id="@+id/textview_workin_hours"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="hours"
                 android:textSize="18sp"
                 android:textColor="#000"
                 android:layout_toRightOf="@+id/timing"
                 android:layout_marginTop="15dp"
                 android:layout_below="@+id/textview_workin_days"/>
         </RelativeLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#1a1a00">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#fff"
                 android:text="VAT number"
                 android:layout_marginLeft="5dp"
                 android:textSize="20sp"
                 android:padding="5dp"
                 />

             <TextView
                 android:id="@+id/vatnumber_edittext"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Edit"
                 android:textColor="#fff"
                 android:textSize="20sp"
                 android:padding="5dp"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="15dp"/>
         </RelativeLayout>
         <Space
             android:layout_width="match_parent"
             android:layout_height="20dp" />

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#1a1a00">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#fff"
                 android:text="CR number"
                 android:layout_marginLeft="5dp"
                 android:textSize="20sp"
                 android:padding="5dp"
                 />

             <TextView
                 android:id="@+id/cr_number_edit_text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Edit"
                 android:textColor="#fff"
                 android:textSize="20sp"
                 android:padding="5dp"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="15dp"/>
         </RelativeLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="18sp"
               android:textColor="#000"
               android:text="Some number"
               android:layout_margin="15dp"/>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="#1a1a00">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#fff"
                 android:text="Services"
                 android:layout_marginLeft="5dp"
                 android:textSize="20sp"
                 android:padding="5dp"
                 />

             <TextView
                 android:id="@+id/services_edit_text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Edit"
                 android:textColor="#fff"
                 android:textSize="20sp"
                 android:padding="5dp"
                 android:layout_alignParentEnd="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginRight="15dp"/>
         </RelativeLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:id="@+id/textview_service_name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:text="Name : "
                 android:textColor="#000"
                 android:textSize="18sp"
                 />
             <TextView
                 android:id="@+id/textview_service_name_symbol"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_10_dp"
                 android:text="Hair Wash"
                 android:layout_marginLeft="20dp"
                 android:paddingLeft="20dp"
                 android:layout_toEndOf="@+id/textview_service_name"
                 android:layout_toRightOf="@+id/textview_service_name"
                 android:textColor="#000"
                 android:textSize="18sp"
                 />
             <TextView
                 android:id="@+id/textview_service_price"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"

                 android:text="Price : "

                 android:layout_below="@+id/textview_service_name"
                 android:textColor="#000"
                 android:textSize="18sp"
                 />
             <TextView
                 android:id="@+id/textview_service_price_symbol"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"

                 android:text="1000"
                android:layout_marginLeft="20dp"
                 android:paddingLeft="20dp"
                 android:layout_toEndOf="@+id/textview_service_name"
                 android:layout_toRightOf="@+id/textview_service_name"
                 android:textColor="#000"
                 android:textSize="18sp"
                 android:layout_below="@+id/textview_service_name_symbol"
                 />

             <TextView
                 android:id="@+id/textview_no_ofprofessionals"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"

                 android:text="No. of professionals : "
                 android:layout_below="@+id/textview_service_price"
                 android:textColor="#000"
                 android:textSize="18sp"

                 />
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@+id/textview_no_ofprofessionals"
                 android:layout_below="@id/textview_service_price_symbol"
                 android:text="2"
                 android:textSize="18sp"
                 android:textColor="#000"
                 />

         </RelativeLayout>
         <View
             android:layout_width="match_parent"
             android:layout_height="@dimen/common_1_dp"></View>

     </LinearLayout>
</ScrollView>